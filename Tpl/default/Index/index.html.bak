		$("#msg_content").focus(function(){
			$("#top_comment").hide();
			$(this).prev("textarea").css({"height":"91px","border-bottom":"1px solid #c8c8c8"});
			$(".send_btn_top").fadeIn("fast");
		});
		
		$(".btn_cancel_top").click(function(){
			$("#msg_content").val("");
