	function checkMsg(){
		var msg=$("#msg_content").val();
		msg=$.trim(msg);
		if(msg=="")
			return false;
		return true;
	}
	function checkMsg2(){
		var msg=$("#msg_content2").val();
		msg=$.trim(msg);
		if(msg=="")
			return false;
		return true;
	}
	function checkMsg3(){
		var msg=$.trim($("#msg_content3").val());
		if(msg=="")
			return false;
		return true;
	}
	function replyMsg(mid){
		if(mid>0){
			$("#msg_form").hide();
			$("#reply_msg").val(mid);
			var reply_u=$("#user_"+mid).html();
			$("#reply_u").html("回复“"+reply_u+"”：");
			var _reply=$("#user_"+mid).parent(".board_user").parent(".board_area").parent("li");
			var _left=_reply.offset().left+88; //左绝对距离 
			var _top=_reply.offset().top+_reply.outerHeight(); //上绝对距离,此处要加上div的高度 
			$(".reply_form").css({'position':'absolute','left':_left+'px','top':_top+'px'});
			$(".reply_form").show(); 
		}
	
	}
	function replyClose(){
		$(".reply_form").hide(); 
	}

	function delMsg(mid){
		if(mid>0){
			if(confirm("确定要删除此留言吗？")){
				jQuery.post("{&WWW}/MsgBoard/del_msg",{"id":mid},function(data){
					if(data.status==1){
						$("#msg_id_"+mid).remove();
					}else{
						alert("删除留言失败！");
					}
				},"json");
			}

		}
	}

	var top1=$("#a_file").offset().top;
	var top2=$("#a_print").offset().top;
	var top3=$("#a_chat").offset().top;
	var maxtop=$(".comment").offset().top-145;
	window.onscroll=function(){
		var stop1=document.body.scrollTop;
		var stop2=document.documentElement.scrollTop;
		var curStop=0;
		if(stop1>=stop2){
			curStop=stop1;
		}else{
			curStop=stop2;
		}
		
		if(curStop>top1&&curStop<=maxtop) {
			if(curStop<=top2){
				changeShareLeft(0);
			}else if(curStop>top2&&curStop<=top3){
				changeShareLeft(1);
			}else if(curStop>top3){
				changeShareLeft(2);
			}
			document.getElementById('fun_share_left').style.display="block";
			$("#fun_share_top").hide();
		}else{
			document.getElementById('fun_share_left').style.display="none";
			$("#fun_share_top").show();
		}
	}
	

	var surl="{&STATIC}";
	function changeShareLeft(curId){
		
		  $(".fun_share_left .fun_share").attr("style","");
		  $(".fun_share_left .fun_share").prev("span").attr("style","");
		  var cur=$(".fun_share_left .fun_share").get(curId);
		  $(cur).css({"color":"#000000"});
		  switch(curId){
		   case 0:$(cur).prev("span").css({"background":"url("+surl+"/Img/fun_area.jpg) no-repeat scroll 0 -32px transparent"});break;
		   case 1:$(cur).prev("span").css({"background":"url("+surl+"/Img/fun_area.jpg) no-repeat scroll -38px -32px transparent"});break;
		   case 2:$(cur).prev("span").css({"background":"url("+surl+"/Img/fun_area.jpg) no-repeat scroll -76px -32px transparent"});break;
		   default:;
		  }
	}
